<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/demoFragment">

    <include app:graph="@navigation/transport_nav_graph" />

    <fragment android:id="@+id/demoFragment"
              android:name="com.gdg.demo.nightking.ui.main.DemoFragment"
              android:label="@string/app_name"
              tools:layout="@layout/fragment_demo">

        <action android:id="@+id/action_demoFragment_to_transportFragment"
                app:destination="@+id/transport_graph"
                app:enterAnim="@anim/slide_in_left" app:exitAnim="@anim/slide_out_right"
                app:popEnterAnim="@anim/slide_in_right" app:popExitAnim="@anim/slide_out_left"/>
    </fragment>

    <fragment android:id="@+id/settingsFragment"
              android:name="com.gdg.demo.nightking.ui.settings.SettingsFragment"
              android:label="@string/label_fragment_settings"/>

</navigation>